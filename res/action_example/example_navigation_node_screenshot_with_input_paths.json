{
    "config": {
        "delay-time-before-end": 3000,
        "max-action-page-tries": 10,
        "run-page-actions-for-each-file": true,
        "allowed-file-extensions": [
            ".jpg",
            ".jpeg",
            ".png",
            ".webp"
        ]
    },
    "navigation": [
        {
            "type": "page",
            "url": "https://www.google.com",
            "delay-time-before-next": 100,
            "elements": [
                {
                    "id": null,
                    "name": null,
                    "xpath": "//div[@class='k1zIA rSk4se']",
                    "actions": [
                        {
                            "type": "node-screenshot",
                            "output-base-file-name": "%fileNameNoExt%",
                            "output-path": "%fileOutPath%",
                            "delay-time-before-next": 100
                        }
                    ]
                }
            ]
        }
    ]
}